# Enable Gzip compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# Serve pre-compressed files if available
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Check for gzip version
  RewriteCond %{HTTP:Accept-Encoding} gzip
  RewriteCond %{REQUEST_FILENAME}\.gz -f
  RewriteRule ^(.*)$ $1\.gz [QSA,L]
  
  # Serve correct content types for gzipped files
  RewriteRule \.css\.gz$ - [T=text/css,E=no-gzip:1,E=no-brotli:1]
  RewriteRule \.js\.gz$ - [T=application/javascript,E=no-gzip:1,E=no-brotli:1]
  
  <FilesMatch "\.(css|js)\.gz$">
    Header set Content-Encoding gzip
  </FilesMatch>
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Cache static JS and CSS for 1 year (with cache busting via filename)
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  
  # Cache images for 1 week
  ExpiresByType image/jpeg "access plus 1 week"
  ExpiresByType image/png "access plus 1 week"
  ExpiresByType image/gif "access plus 1 week"
  ExpiresByType image/svg+xml "access plus 1 week"
  ExpiresByType image/webp "access plus 1 week"
  
  # Cache fonts for 1 year
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # Don't cache HTML
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Alternative cache-control headers
<IfModule mod_headers.c>
  # Cache static assets with immutable flag
  <FilesMatch "\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Cache images for 1 week
  <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp)$">
    Header set Cache-Control "public, max-age=604800"
  </FilesMatch>
  
  # Don't cache HTML files
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  
  # Security headers
  Header set X-Frame-Options "DENY"
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

